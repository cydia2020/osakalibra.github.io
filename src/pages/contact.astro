---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
// import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>

  <HeroText tagline="Contact | 連絡先">

    <div slot="title">
      <br>
      気軽にお問い合わせくださいませ〜<br>
      Feel free to contact us~
    </div>
  </HeroText>

  <Features2
    items={[
      {
        title: 'Languages',
        description: '日本語, English, 中文, español, etc.',
        icon: 'tabler:language',
      },
      {
        title: 'Twitter',
        description: "https://twitter.com/handai_libra",
        icon: 'tabler:brand-twitter',
      },
      {
        title: 'Question Box',
        description: "https://querie.me/user/handai_libra",
        icon: 'tabler:heart-question',
      },
      {
        title: 'Email',
        description: 'libratoiawase@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'Center for the Study of Co*Design, Toyonaka Campus, The University of Osaka',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
