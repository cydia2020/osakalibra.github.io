---
import type { CallToAction } from '~/types';
import Button from '~/components/ui/Button.astro';

export interface Props {
  tagline?: string;
  callToAction?: string | CallToAction;
  callToAction2?: string | CallToAction;
}

const {
  tagline,
  callToAction,
  callToAction2,
} = Astro.props;
---

<section class="relative md:-mt-[76px] not-prose">
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
    <div class="py-12 md:py-20 pb-8 md:pb-8">
      <div class="text-center max-w-5xl mx-auto">
        {tagline && (
          <p class="text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase" set:html={tagline}></p>
        )}
        <slot name="title"></slot>
        <div class="text-center max-w-5xl mx-auto text-3xl md:text-4xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200">
          <slot name="subtitle"></slot>
          <div class="max-w-3xl mx-auto text-base text-muted mb-6 dark:text-slate-300">
            {callToAction && (
              <div class="flex w-full sm:w-auto">
                {typeof callToAction === 'string' ? (
                  <Fragment set:html={callToAction} />
                ) : (
                  <Button variant="primary" {...callToAction} />
                )}
              </div>
            )}
            {callToAction2 && (
              <div class="flex w-full sm:w-auto">
                {typeof callToAction2 === 'string' ? (
                  <Fragment set:html={callToAction2} />
                ) : (
                  <Button {...callToAction2} />
                )}
              </div>
            )}
          </div>
        </div>
        <slot name="content"></slot>
      </div>
    </div>
  </div>
</section>